                            <Setter Property="IconOpacity" Value="0.38" />
                            <Setter Property="BackgroundColour" Value="Transparent" />
                            <Setter Property="IconColor" Value="{DynamicResource OnSurfaceColor}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="StandardIconButtonStyle" TargetType="views:IconButton">
        <Setter Property="BackgroundColour" Value="Transparent" />
        <Setter Property="IconColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="StateLayerColor" Value="{DynamicResource PrimaryColor}" />
