<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Material.Components.Maui.Styles.TextFieldStyles"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Material.Components.Maui">

    <Style TargetType="views:TextField">
        <Setter Property="ControlTemplate">
            <ControlTemplate>
                <Grid x:Name="PART_Root">
                    <views:TextFieldContainer
                        x:Name="PART_Container"
                        BackgroundColor="{TemplateBinding BackgroundColor,
                                                          Mode=TwoWay}"
                        Shape="{TemplateBinding Shape,
                                                Mode=TwoWay}" />

                    <Editor x:Name="PART_Editor" Text="{TemplateBinding Text, Mode=TwoWay}" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

</ResourceDictionary>