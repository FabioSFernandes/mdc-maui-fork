<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Material.Components.Maui.Styles.BaseTextEditorStyles"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Material.Components.Maui">

    <Style TargetType="views:BaseTextEditor">
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="MinimumWidthRequest" Value="100" />
        <Setter Property="MinimumHeightRequest" Value="25" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontColor" Value="{DynamicResource OnSurfaceColor}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="CaretColor" Value="{DynamicResource PrimaryColor}" />
    </Style>

</ResourceDictionary>