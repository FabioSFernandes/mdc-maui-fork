<ContentView
    x:Class="SampleApp.Panels.IconButtonPanel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:md="clr-namespace:Material.Components.Maui;assembly=Material.Components.Maui"
    xmlns:views="clr-namespace:SampleApp.Views"
    BackgroundColor="{DynamicResource BackgroundColor}">

    <ScrollView Padding="30,20">
        <VerticalStackLayout Spacing="15">
            <md:WrapLayout Padding="20" HorizontalSpacing="40">
                <md:IconButton IconKind="MoreVert" Style="{StaticResource StandardIconButtonStyle}" />
                <md:IconButton IconKind="MoreVert" Style="{StaticResource StandardIconButtonStyle}" />
                <md:IconButton IconKind="Settings" Style="{StaticResource FilledIconButtonStyle}" />
                <md:IconButton IconKind="Settings" Style="{StaticResource FilledTonalIconButtonStyle}" />
                <md:IconButton IconKind="Settings" Style="{StaticResource OutlinedIconButtonStyle}" />
            </md:WrapLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>